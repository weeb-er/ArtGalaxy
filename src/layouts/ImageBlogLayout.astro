---
const { imageSrc, imageAlt, title } = Astro.props;
import Layout from "../layouts/Layout.astro";
---

<Layout title="ImageBlog">
<article class="image-blog-layout">
  <div class="image-header">
    <img src={imageSrc} alt={imageAlt} />
  </div>

  <div class="image-blog-content">
    <h1>{title}</h1>
    <slot />
  </div>
</article></Layout>

<style>
  .image-blog-layout {
    max-width: 900px;
    margin: 0 auto;
    padding-bottom: 4rem;
  }

  .image-header {
    height: 33vh;
    overflow: hidden;
  }

  .image-header img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-bottom: 4px solid #000000;
  }

  .image-blog-content {
    padding: 2rem 1.5rem;
  }

  .image-blog-content h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #ffffff;
  }

  .image-blog-layout .image-blog-content p {
  font-size: 3rem;
}
</style>
